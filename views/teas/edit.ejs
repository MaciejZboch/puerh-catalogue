<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Tea</h1>
        <div class="col-6 offset-3">
            <form action="/tea/<%=t._id%>?_method=put" method="post" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="name">Name (required):</label>
                    <input required class="form-control" type="text" id="name" name="tea[name]" value="<%=t.name%>">
                    <div class="valid-feedback">Well done!</div>
                </div>
                <label class="form-label" for="type">Type (required):</label>
                <select class="form-select" aria-label="type" id="type" name="tea[type]">
                    <option selected value="Raw / Sheng">Raw / Sheng</option>
                    <option value="Ripe / Shu">Ripe / Shu</option>
                    <option value="blend">A blend of Ripe and Raw</option>
                 
                    <div class="mb-3"> 
                <label for="tea[year]" class="form-label">Year of production:</label>
<input class="form-control" type="number" id="tea[year]" name="tea[year]" min="1900" max="<%=currentYear%>" value="<%=t.year%>">
</div>
<div class="mb-3">
    <label for="formFile" class="form-label">Upload image:</label>
    <input class="form-control" type="file" id="formFile" name="image" multiple>
</div>
<div class="mb-3">
    <label class="form-label" for="vendor">Bought from (required):</label>
    <input required class="form-control" type="text" id="vendor" name="vendor[name]">
    <div class="valid-feedback">Well done!</div>
</div>
<div class="mb-3">
    <label class="form-label" for="producer">Produced by:</label>
    <input class="form-control" type="text" id="producer" name="producer[name]">
    <div class="valid-feedback">Well done!</div>
</div>
                <div class="mb-3">
                    <label class="form-label" for="region">Growing region:</label>
                    <input class="form-control" type="text" id="region" name="tea[region]" value="<%=t.region%>">
                    <div class="valid-feedback">Well done!</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="village">Growing village:</label>
                    <input class="form-control" type="text" id="village" name="tea[village]" value="<%=t.village%>">
                    <div class="valid-feedback">Well done!</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Ageing location:</label>
                    <input class="form-control" type="text" id="location" name="tea[ageing_location]" value="<%=t.location%>">
                    <div class="valid-feedback">Well done!</div>
                </div>

                <label class="form-label" for="storage">Type of storage:</label>
                <select class="form-select" aria-label="Type of storage" id="storage" name="tea[ageing_conditions]">
                    <option selected value="Dry">Dry</option>
                    <option value="Natural">Natural</option>
                    <option value="Wet">Wet</option>
                    <option value="Hong-Kong Traditional">Hong-Kong Traditional</option>
                  </select>


                    <div class="mb-3">
                        <label class="form-label" for="description">Description:</label>
                        <textarea class="form-control" id="description"
                            name="tea[description]" value="<%=t.description%>"></textarea>
                    </div>
                    
                    <label class="form-label" for="shape">Shape:</label>
                    <select class="form-select" aria-label="shape" id="shape" name="tea[shape]">
                        <option selected value="Loose">Loose</option>
                        <option value="Cake">Cake</option>
                        <option value="Tuo">Tuo</option>
                        <option value="Brick">Brick</option>
                        <option value="Mushroom">Mushroom</option>
                        <option value="Dragon ball">Dragon ball</option>
                        <option value="Tube">Bamboo Tube</option>
                        <option value="Melon">Melon</option>
                        <option value="Other">Other</option>
                      </select>
                    <div class="mb-3">
                        <button class="btn btn-success">Edit tea</button>
                    </div>
                    <div class="mb-3">
                        <% t.images.forEach(function(img, i) { %>
                            <img src="<%=img.thumbnail%>">
                            <div class="form-check-inline">
                                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]"
                                    value="<%=img.filename%>">
                            </div>
                            <label for="image-<%=i%>">Delete?</label>
                            <% }) %>
                    </div>
            </form>

        </div>

    </div>