<% layout('layouts/boilerplate') %>
<div class="container d-flex flex-column justify-content-md-center h-100 mb-5">
  <div class="row mb-5 mt-3">
    <h1 class="text-light display-2 text-xl text-center my-5">
      Pu-erh Catalogue
    </h1>
    <section class="col-md-6 px-5">
      <div class="my-5 my-md-0">
        <h2 class="text-light display-5 my-4">Browse Pu-erh</h2>
        <span class="text-light">
          A website for pu-erh tea lovers. Log in to add teas to your collection
          or search to see what has already been added!
        </span>
      </div>
    </section>
    <section class="col-md-6 px-5 d-flex flex-column justify-content-center">
      <h3 class="display-4 text-light text-center my-5 my-md-0 mb-md-5">
        Search for tea
      </h3>
      <form action="/tea/browse" method="get">
        <div>
          <!-- <label for="vendor" class="form-label">By vendor:</label> -->
          <div class="row-md d-flex justify-content-md-end">
            <input
              class="form-control w-lg-75"
              list="datalistOptions"
              id="vendor-input"
              placeholder="Type to search..."
              name="vendor"
            />
            <datalist id="datalistOptions">
              <%for (let vendor of vendors) {%>
              <option value="<%=vendor.name%>"><%}%></option>
            </datalist>
          </div>
          <div class="row my-3">
            <div class="col-4"></div>
            <div class="col-6 d-flex justify-content-end">
              <label class="text-light">Search by:</label>
              <div class="ms-2">
                <button>Vendor</button>
                <button>Producer</button>
              </div>
            </div>
          </div>
        </div>
      </form>
